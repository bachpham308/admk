@using WebApplication22.ViewModels
@using WebApplication22.Models
@model ModelsViewModel

<div class="container">
    <h3 class="container__header">РАЗДЕЛ АДМИНИСТРАТОРА - МОДЕЛИ</h3>
    <table class="user-table">
        <thead>
            <tr>
                <th>
                    ИД
                </th>
                <th>
                    Наименование
                </th>
                <th>
                    Краткое имя
                </th>
                <th>
                    Производитель
                </th>
                <th>
                    VpicID
                </th>
                <th>
                    Удаление
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Models)
            {
                <tr>
                    <td>
                        @m.ID
                    </td>
                    <td>
                        @m.Name
                    </td>
                    <td>
                        @m.TrimName
                    </td>
                    <td>
                        @m.Make.Name
                    </td>
                    <td>
                        @m.VpicID
                    </td>
                    <td>
                        @Html.ActionLink("Удалить", "DeleteModel", "Admin", new { id = m.ID }, new { })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (LoginData.Login.Role != "user")
    {
        @Html.Partial("CreateModelPartial", Model.CreatedModel)
    }
</div>