@using WebApplication22.ViewModels
@using WebApplication22.Models
@model UsersViewModel

<div class="container">
    <h3 class="container__header">РАЗДЕЛ АДМИНИСТРАТОРА - ТОВАРЫ</h3>
    <table class="user-table">
        <thead>
            <tr>
                <th>
                    ИД
                </th>
                <th>
                    Логин
                </th>
                <th>
                    Телефон
                </th>
                <th>
                    Роль
                </th>
                <th>
                    Удалить
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model.Users)
            {
                <tr>
                    <td>
                        @u.Id
                    </td>
                    <td>
                        @u.Name
                    </td>
                    <td>
                        @u.Phone
                    </td>
                    <td>
                        @u.Role
                    </td>
                    <td>
                        @Html.ActionLink("Удалить", "DeleteUser", "Admin", new { id = u.Id }, new { })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (LoginData.Login.Role != "user")
    {
        @Html.Partial("CreateUserPartial", Model.CreatedUser)
    }
</div>